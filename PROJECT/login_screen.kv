MDScreen:
    name: "login"
    MDIconButton:
        icon: "arrow-left"
        pos_hint: {"center_x": 0.05, "center_y": 0.97}
        user_font_size: "40sp"
        on_release:
            root.manager.transition.direction = "right"
            root.manager.current = "welcome"
    MDCard:
        size_hint: None, None
        size: 300, 500
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 5
        padding: 10
        spacing: 5
        orientation: 'vertical'

        MDLabel:
            text: 'WELCOME'
            font_style: "Button"
            font_size: 40
            halign: "center"
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15

        MDTextField:
            id: username
            hint_text: "Username"
            icon_right: "account"
            size_hint_x: None
            width: 200
            pos_hint: {"center_x": 0.5}
            font_size: 18

        MDTextField:
            id: password
            hint_text: "Password"
            icon_right: "eye-off"
            helper_text: "Wrong password"
            helper_text_mode: "on_error"
            size_hint_x: None
            width: 200
            pos_hint: {"center_x": 0.5}
            font_size: 18
            password: True

        MDRaisedButton:
            id: click_continue
            text: "Continue"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            md_bg_color: "blue"
            on_press: app.login()