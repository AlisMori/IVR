MDScreen:
    name:  "main"
    MDBottomNavigation:
        panel_color: "#eeeaea"
        selected_color_background: "#97ecf8"
        text_color_active: 0, 0, 0, 1

        MDBottomNavigationItem:
            name: 'Med info'
            text: 'Инфо'
            icon: 'information'

            MDBoxLayout:
                orientation: 'vertical'
                #padding: '10sp'

                MDTextField:
                    id: drug
                    hint_text: "Введите название препарата"
                    helper_text: "Проверьте правильность введеного названия"
                    helper_text_mode: "on_error"
                    size_hint_x: None
                    width: 300

                MDRaisedButton:
                    id: research_info
                    text: "Поиск"
                    md_bg_color: 0, 0, 1, 1
                    on_press: app.info()


                MDLabel:
                    text: "Описание"
                    font_style: "Body1"

                MDScrollView:
                    do_scroll_x: False
                    do_scroll_y: True
                    MDLabel:
                        id: info
                        text: ""
                        text_size: self.texture_size
                        adaptive_size: True
                        font_style: "Body2"

                MDLabel:
                    text: "Показания к применению"
                    font_style: "Body1"

                MDScrollView:
                    do_scroll_x: False
                    do_scroll_y: True
                    MDLabel:
                        id: indications
                        text: ""
                        text_size: root.size
                        adaptive_size: True
                        font_style: "Body2"

                MDLabel:
                    text: "Противопоказания к применению"
                    ont_style: "Body1"

                MDScrollView:
                    do_scroll_x: False
                    do_scroll_y: True
                    MDLabel:
                        id: contraindications
                        text: ""
                        text_size: root.size
                        adaptive_size: True
                        font_style: "Body2"

        MDBottomNavigationItem:
            name: 'Incompatibilities'
            text: 'Несовместимости'
            icon: 'close-circle-outline'

            MDBoxLayout:
                orientation: 'vertical'
                padding: '30sp'
                spacing: 10

                MDTextField:
                    id: incomp_drug
                    hint_text: "Введите название препарата"
                    # helper_text: "Название препара введено некорректно"
                    # helper_text_mode: "on_error"
                    size_hint_x: None
                    width: 300

                MDRaisedButton:
                    id: research_incomp
                    text: "Поиск"
                    md_bg_color: 0, 0, 1, 1
                    halign: 'left'
                    on_press: app.incomp()

                ScrollView:
                    do_scroll_x: False
                    do_scroll_y: True
                    MDLabel:
                        id: list_med
                        text: "Cписок препаратов"
                        text_size: root.size
                        adaptive_size: True
                        pos_hint: {'left': 1}


        MDBottomNavigationItem:
            name: 'Interactions'
            text: 'Взаимодействия'
            icon: 'file-search'

            MDBoxLayout:
                orientation: 'vertical'
                padding: '30sp'
                spacing: 15

                MDTextField:
                    id: drug_1
                    hint_text: "Введите название препарата"
                    helper_text: "Название препара введено некорректно"
                    helper_text_mode: "on_error"
                    size_hint_x: None
                    width: 300

                MDTextField:
                    id: drug_2
                    hint_text: "Введите название препарата"
                    helper_text: "Название препара введено некорректно"
                    helper_text_mode: "on_error"
                    size_hint_x: None
                    width: 300

                MDRaisedButton:
                    id: research_comp
                    text: "Поиск"
                    md_bg_color: 0, 0, 1, 1
                    halign: 'left'
                    on_press: app.comp()


                MDLabel:
                    id: compatibility
                    text: "Степень серьезности/тяжести взаимодействия: "
                    pos_hint: {'left': 1}

        MDBottomNavigationItem:
            name: 'Calendar'
            text: 'Календарь'
            icon: 'calendar'

            MDBoxLayout:
                orientation: 'vertical'
                padding: '30sp'
                spacing: 10

                MDRaisedButton:
                    id: calendar
                    text: "Выбрать дату и время"
                    md_bg_color: 0, 0, 1, 1
                    size_hint: 0.65, .065
                    on_press: app.calendar()

                MDLabel:
                    id: date
                    text: "Дата"

                MDLabel:
                    id: time
                    text: "Время"

                MDTextField:
                    id: periodicity
                    hint_text: 'Периодичность(в минутах)'
                    input_filter: 'int'

                MDTextField:
                    id: drugs
                    hint_text: "Введите препарат из 'Домашней аптечки'"
                    helper_text: "Такого препарата нет в аптечке"
                    helper_text_mode: "on_error"

                MDRaisedButton:
                    id: reminder
                    text: "Создать напоминание"
                    font_size: 12
                    md_bg_color: "blue"
                    on_press: app.remind()

                MDLabel:
                    id: remind_s
                    text: ''

        MDBottomNavigationItem:
            name: 'Health statistic'
            id: health
            text: 'Здоровье'
            icon: 'chart-areaspline'

            MDBoxLayout:
                orientation: 'vertical'
                padding: '30sp'
                spacing: 10

                MDTextField:
                    id: weight_stat
                    hint_text: "Вес"
                    helper_text: "Incorrect"
                    helper_text_mode: "on_error"
                    max_text_length: 3
                    size_hint_x: None
                    width: 200
                    pos_hint: {"center_x": 0.5}
                    font_size: 18

                MDTextField:
                    id: pressure_s
                    hint_text: "Артериальное давление (САД)"
                    helper_text: "Incorrect"
                    helper_text_mode: "on_error"
                    max_text_length: 3
                    size_hint_x: None
                    width: 200
                    pos_hint: {"center_x": 0.5}
                    font_size: 18

                MDTextField:
                    id: pressure_d
                    hint_text: "Артериальное давление (ДАД)"
                    helper_text: "Incorrect"
                    helper_text_mode: "on_error"
                    max_text_length: 3
                    size_hint_x: None
                    width: 200
                    pos_hint: {"center_x": 0.5}
                    font_size: 18

                MDTextField:
                    id: glucose
                    hint_text: "Уровень глюкозы в крови"
                    max_text_length: 3
                    helper_text: "Incorrect"
                    helper_text_mode: "on_error"
                    size_hint_x: None
                    width: 200
                    pos_hint: {"center_x": 0.5}
                    font_size: 18

                MDRaisedButton:
                    id: stats_graph
                    text: "Добавить статистику"
                    font_size: 12
                    pos_hint: {"center_x": 0.5}
                    md_bg_color: "blue"
                    on_press: app.add_stats()

                MDRaisedButton:
                    id: stats_graph
                    text: "Показать статистику"
                    font_size: 12
                    pos_hint: {"center_x": 0.5}
                    md_bg_color: "blue"
                    on_press:
                        root.manager.transition.direction = "up"
                        root.manager.current = "graph"
                        app.graph()

                MDLabel:
                    id: stats_status
                    text: ''

        MDBottomNavigationItem:
            name: 'Profile'
            text: 'Профиль'
            icon: 'account'
            on_tab_press: app.get_profile()

            MDBoxLayout:
                orientation: 'vertical'

                MDLabel:
                    id: username
                    text: 'name'
                    font_style: "H3"
                    halign: "center"

                MDLabel:
                    id: birthday
                    text: 'birthday: '
                    font_style: "Body1"
                    halign: "center"

                MDLabel:
                    id: weight
                    text: 'weight: '
                    font_style: "Body1"
                    halign: "center"


                MDLabel:
                    id: height
                    text: 'height: '
                    font_style: "Body1"
                    halign: "center"

                MDRaisedButton:
                    id: home_drugs
                    text: "Домашняя аптечка"
                    font_size: 12
                    pos_hint: {"center_x": 0.5}
                    md_bg_color: "blue"
                    on_press:
                        root.manager.transition.direction = "up"
                        root.manager.current = "home_drugs"
                        app.show_med()


