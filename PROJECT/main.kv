MDScreen:
    name:  "main"
    MDBottomNavigation:
        panel_color: "#eeeaea"
        selected_color_background: "#97ecf8"
        text_color_active: 0, 0, 0, 1

        MDBottomNavigationItem:
            name: 'Med info'
            text: 'Инфо'
            icon: 'information'

            MDBoxLayout:
                orientation: 'vertical'
                padding: '30sp'

                MDTextField:
                    id: drug
                    hint_text: "Введите название препарата"
                    helper_text: "Проверьте правильность введеного названия"
                    helper_text_mode: "on_error"
                    size_hint_x: None
                    width: 300

                MDRaisedButton:
                    id: research_info
                    text: "Поиск"
                    md_bg_color: 0, 0, 1, 1
                    on_press: app.info()


                MDLabel:
                    text: "Описание"
                    font_style: "Body1"

                MDLabel:
                    id: info
                    text: ""
                    text_size: self.size
                    font_style: "Body2"

                MDLabel:
                    text: "Показания к применению"
                    font_style: "Body1"

                MDLabel:
                    id: indications
                    ext: ""
                    text_size: self.size
                    font_style: "Body2"

                MDLabel:
                    text: "Противопоказания к применению"
                    ont_style: "Body1"

                MDLabel:
                    id: contraindications
                    text: ""
                    text_size: self.size
                    font_style: "Body2"

        MDBottomNavigationItem:
            name: 'Incompatibilities'
            text: 'Несовместимости'
            icon: 'close-circle-outline'

            MDBoxLayout:
                orientation: 'vertical'
                adaptive_size: True
                pos_hint: {'center_x': .5, 'center_y': .75}
                spacing: 15

                MDTextField:
                    hint_text: "Введите название препарата"
                    # helper_text: "Название препара введено некорректно"
                    # helper_text_mode: "on_error"
                    size_hint_x: None
                    width: 300

                MDRaisedButton:
                    id: research_incomp
                    text: "Поиск"
                    md_bg_color: 0, 0, 1, 1
                    halign: 'left'
                    on_press: app.incomp()


                MDLabel:
                    id: list_med
                    text: "список препаратов"
                    pos_hint: {'left': 1}


        MDBottomNavigationItem:
            name: 'Compatibility'
            text: 'Совместимость'
            icon: 'file-search'

            MDBoxLayout:
                orientation: 'vertical'
                adaptive_size: True
                pos_hint: {'center_x': .5, 'center_y': .75}
                spacing: 15

                MDTextField:
                    id: drug_1
                    hint_text: "Введите название препарата"
                    # helper_text: "Название препара введено некорректно"
                    # helper_text_mode: "on_error"
                    size_hint_x: None
                    width: 300

                MDTextField:
                    id: drug_2
                    hint_text: "Введите название препарата"
                    # helper_text: "Название препара введено некорректно"
                    # helper_text_mode: "on_error"
                    size_hint_x: None
                    width: 300

                MDRaisedButton:
                    id: research_comp
                    text: "Поиск"
                    md_bg_color: 0, 0, 1, 1
                    halign: 'left'
                    on_press: app.comp()


                MDLabel:
                    id: compatibility
                    text: "препараты совместимы/несовместимы"
                    pos_hint: {'left': 1}

        MDBottomNavigationItem:
            name: 'Calendar'
            text: 'Календарь'
            icon: 'calendar'

            MDBoxLayout:
                orientation: 'vertical'
                adaptive_size: True
                pos_hint: {'center_x': .5, 'center_y': .75}
                spacing: 15

                MDRaisedButton:
                    id: calendar
                    text: "Выбрать дату"
                    md_bg_color: 0, 0, 1, 1
                    halign: 'left'
                    helper_text_mode: "on_error"
                    on_press: app.calendar()

                MDLabel:
                    id: date
                    text: "Some stuff!"

        MDBottomNavigationItem:
            name: 'Health statistic'
            text: 'Здоровье'
            icon: 'chart-areaspline'
            on_tab_press: app.graph()



        MDBottomNavigationItem:
            name: 'Profile'
            text: 'Профиль'
            icon: 'account'
            on_tab_press: app.get_profile()

            MDBoxLayout:
                orientation: 'vertical'

                MDLabel:
                    id: username
                    text: 'name'
                    font_style: "H3"
                    halign: "center"

                MDLabel:
                    id: birthday
                    text: 'birthday: '
                    font_style: "Body1"
                    halign: "center"

                MDLabel:
                    id: weight
                    text: 'weight: '
                    font_style: "Body1"
                    halign: "center"


                MDLabel:
                    id: height
                    text: 'height: '
                    font_style: "Body1"
                    halign: "center"


